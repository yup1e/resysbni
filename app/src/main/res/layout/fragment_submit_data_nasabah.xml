<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".view.fragment.SubmitFragment"
    android:background="#fefdfc">

    <ScrollView
        android:id="@+id/main_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                android:id="@+id/toolbar"
                layout="@layout/toolbar" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="top"
                android:orientation="vertical"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin">


                <!-- TODO: Update blank fragment layout -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Profil Nasabah"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/colorTextAcceent" />
                <TextView
                    android:text="No KTP"
                    style="@style/detail_title" />
                <TextView
                    android:id="@+id/txt_submit_no_ktp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="18sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="5dp"
                    />


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/TILNamaLengkap"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp">

                    <EditText
                        android:id="@+id/input_submit_nama"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ"
                        android:hint="Nama Lengkap"
                        android:inputType="textCapSentences|textPersonName"
                        android:maxLength="50"
                        android:singleLine="true"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp">

                    <EditText
                        android:id="@+id/input_submit_alamat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Alamat Usaha"
                        android:gravity="top|left"
                        android:inputType="textMultiLine"
                        android:maxLines="5"
                        android:maxLength="140"
                        android:lines="3"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp">

                    <EditText
                        android:id="@+id/input_submit_nope"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nomor Telp/HP"
                        android:inputType="number"
                        android:maxLength="15"
                        android:singleLine="true" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp">

                    <EditText
                        android:id="@+id/input_submit_sektor_usaha"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Sektor Usaha"
                        android:inputType="textCapSentences|textPersonName"
                        android:maxLength="50"
                        android:singleLine="true" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp">

                    <EditText
                        android:id="@+id/input_submit_lama_usaha"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Lama Usaha"
                        android:maxLength="50"
                        android:singleLine="true" />
                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Informasi Pengajuan"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="20sp"
                    android:layout_marginTop="18dp"
                    android:layout_marginBottom="10dp"
                    android:textStyle="bold"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorTextAcceent"
                    android:layout_marginBottom="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                     android:text="Jenis Pengajuan"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="18dp"/>
                <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner_kredit"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    app:met_floatingLabel="highlight"
                    app:met_floatingLabelText="Jenis Pengajuan"
                    android:hint="Pilih Jenis Pengajuan"
                    android:visibility="gone"/>

                <RadioGroup
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageView"
                    android:id="@+id/rgJenis"
                    android:orientation="horizontal"
                    android:layout_alignLeft="@+id/textView2"
                    android:layout_alignStart="@+id/textView2"
                    android:layout_alignRight="@+id/textView3"
                    android:layout_alignEnd="@+id/textView3">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="KUR"
                        android:id="@+id/rbKUR"
                        android:layout_gravity="center_horizontal"
                        android:checked="true"
                        android:tag="1"/>
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="EDC"
                        android:id="@+id/rbEDC"
                        android:layout_gravity="center_horizontal"
                        android:checked="false"
                        android:tag="2"/>
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Laku Pandai"
                        android:id="@+id/rbLakuPandai"
                        android:layout_gravity="center_horizontal"
                        android:checked="false"
                        android:tag="3"/>

                </RadioGroup>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/layoutJumlah"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:visibility="visible">
                    <EditText android:id="@+id/input_submit_kredit_jumlah"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberSigned"
                        android:digits="1234567890"
                        android:hint="Jumlah pengajuan kredit"
                        android:singleLine="true"
                        android:maxLength="50"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/layoutAgunan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:visibility="visible">
                    <EditText android:id="@+id/input_submit_kredit_agunan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Agunan"
                        android:singleLine="true"
                        android:maxLength="50"/>
                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Lokasi dan Foto Usaha"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="32dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/colorTextAcceent" />

                <!--<com.google.android.gms.maps.MapView
                    android:id="@+id/map"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    tools:context="com.sahaware.resysbni.view.fragment.SubmitFragment"/>-->
                <RelativeLayout
                    android:id="@+id/map_layout"
                    android:layout_width="match_parent"
                    android:layout_height="300dp">
                    <!--com.google.android.gms.maps.MapView
                        android:id="@+id/map"
                        android:name="com.google.android.gms.maps.SupportMapFragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="-100dp"
                        android:layout_marginBottom="-100dp"
                        tools:context="com.sahaware.resysbni.view.fragment.SubmitFragment"/-->
                    <fragment xmlns:map="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/map"
                        android:name="com.google.android.gms.maps.SupportMapFragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />

                    <ImageView
                        android:id="@+id/transparent_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@color/transparent" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/txt_address_marker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_gravity="left"/>

                <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                    android:id="@+id/spinner_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    app:met_floatingLabel="highlight"
                    app:met_floatingLabelText="Pilih Kantor"
                    android:hint="Pilih Kantor"
                    android:visibility="gone"/>

             <!--   <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="16dp"
                    android:text="Lokasi dan foto tempat usaha"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"/>-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Rekomendasi Kantor Pengajuan:"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/txt_rekomendasi_kantor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/colorTextAcceent"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_foto_ktp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:text="Foto KTP"
                        android:textColor="@color/colorTextPrimary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="3dp"/>
                    <ImageView
                        android:id="@+id/img_submit_location_1"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:background="@drawable/border_image"
                        android:src="@drawable/camera"
                        android:clickable="true"
                        android:onClick="onClick"
                        android:layout_gravity="left"
                        android:tag="img"
                        android:layout_alignTop="@+id/tv_foto_ktp"

                        />
                    <TextView
                        android:id="@+id/tv_foto_usaha"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:text="Foto usaha"
                        android:textColor="@color/colorTextPrimary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="3dp"
                        android:layout_marginLeft="3dp"
                        android:layout_alignLeft="@+id/tv_foto_ktp"
                        android:layout_toEndOf="@+id/img_submit_location_2"
                        />
                    <ImageView
                        android:id="@+id/img_submit_location_2"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:background="@drawable/border_image"
                        android:src="@drawable/camera"
                        android:clickable="true"
                        android:onClick="onClick"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:tag="img"
                        android:layout_alignTop="@+id/tv_foto_usaha"

                        />
                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom">

                <info.hoang8f.widget.FButton
                    android:id="@+id/btn_submit_data_nasabah"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:onClick="submit"
                    android:paddingBottom="5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="5dp"
                    android:text="Simpan"
                    android:textColor="@android:color/white"
                    fbutton:buttonColor="@color/btn_color"
                    fbutton:cornerRadius="5dp"
                    fbutton:shadowColor="@color/btn_shadow"
                    fbutton:shadowEnabled="false"
                    fbutton:shadowHeight="5dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="16dp"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
