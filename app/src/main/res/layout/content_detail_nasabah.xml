                    android:layout_height="2dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_span="2"
                    android:background="@color/grey" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
