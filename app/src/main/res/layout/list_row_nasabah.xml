<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="10dp">

    <ImageView
        android:layout_width="96px"
        android:layout_height="96px"
        android:layout_marginRight="10dp"
        android:src="@drawable/default_icon"
        android:id="@+id/imageView"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/nama_nasabah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Noor Shakato Eka"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/titleColor"
        android:layout_alignTop="@+id/imageView"
        android:layout_toEndOf="@+id/imageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No. KTP : "
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/textColor"
        android:id="@+id/textView5"
        android:layout_below="@+id/textView4"
        android:layout_toEndOf="@+id/imageView" />

    <TextView
        android:id="@+id/ktp_nasabah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3515040611910003"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/textColor"
        android:layout_below="@+id/telp_nasabah"
        android:layout_toEndOf="@+id/textView5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No. HP : "
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/textColor"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView1"
        android:layout_alignStart="@+id/textView1" />
    <TextView
        android:id="@+id/telp_nasabah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+6285782022868"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/textColor"
        android:layout_below="@+id/textView1"
        android:layout_toEndOf="@+id/textView5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tanggal Input : "
        android:textSize="12sp"
        android:textColor="@android:color/holo_red_dark"
        android:id="@+id/textView"
        android:textStyle="italic"
        android:layout_below="@+id/textView5"
        android:layout_toEndOf="@+id/imageView" />
    <TextView
        android:id="@+id/waktu_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textStyle="italic"
        android:text="Kamis, 20 Jun 2016"
        android:textColor="@android:color/holo_red_dark"
        android:layout_below="@+id/ktp_nasabah"
        android:layout_toEndOf="@+id/textView" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jenis Referral : "
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/textColor"
        android:id="@+id/textView1"
        android:layout_below="@+id/sla_nasabah"
        android:layout_alignStart="@+id/nama_nasabah" />

    <TextView
        android:id="@+id/jenis_pinjaman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KUR"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/textColor"
        android:layout_alignTop="@+id/textView1"
        android:layout_toEndOf="@+id/textView1" />

    <TextView
        android:id="@+id/sla_nasabah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 Hari Yang Lalu"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/textColor"
        android:layout_alignBottom="@+id/nama_nasabah"
        android:layout_alignEnd="@+id/status" />


    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OPEN"
        android:textSize="16dp"
        android:textColor="@android:color/white"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
